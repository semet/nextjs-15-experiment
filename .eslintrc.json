{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-console": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "../*",
          "../",
          "..",
          "@/apis/*/*",
          "@/configs/*/*",
          "@/components/*/*",
          "@/contexts/*/*",
          "@/features/*/*",
          "@/hooks/*/*",
          "@/layouts/*/*",
          "@/schemas/*/*",
          "@/types/*/*",
          "@/utils/*/**"
        ]
      }
    ],
    "linebreak-style": ["error", "unix"],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object"
        ],
        "newlines-between": "always",
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    "import/default": "off",
    "import/no-named-as-default-member": "off",
    "import/no-named-as-default": "off"
  }
}
